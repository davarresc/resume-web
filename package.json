{
  "name": "resume-web",
  "type": "module",
  "version": "0.0.1",
  "description": "A personal website build with Astro + TailwindCSS",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "npm run lint:eslint && npm run lint:style",
    "lint:eslint": "eslint . --ext .js,.cjs,.mjs,.ts,.tsx,.astro",
    "lint:style": "stylelint \"**/*.{css,scss,sass,astro,html}\"",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,astro,md,mdx,json}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx,astro}": [
      "eslint --fix"
    ],
    "*.{css,astro,html}": [
      "stylelint --fix"
    ]
  },
  "dependencies": {
    "@iconify-json/tabler": "^1.2.23",
    "@tailwindcss/vite": "^4.1.16",
    "astro": "^5.15.3",
    "astro-icon": "^1.1.5",
    "daisyui": "^5.4.3",
    "markdown-it": "^14.1.0",
    "nodemailer": "^7.0.10",
    "tailwindcss": "^4.1.16"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.39.1",
    "@types/markdown-it": "^14.1.2",
    "@types/nodemailer": "^7.0.3",
    "@typescript-eslint/parser": "^8.46.3",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-astro": "^1.4.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "postcss-html": "^1.8.0",
    "prettier": "3.6.2",
    "prettier-plugin-astro": "0.14.1",
    "stylelint": "^16.25.0",
    "stylelint-config-astro": "^2.0.0",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-standard": "^39.0.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3"
  }
}
